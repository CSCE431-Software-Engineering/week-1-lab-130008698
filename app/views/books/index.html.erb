<h1>Books</h1>
<%= link_to 'Add a New Book', new_book_path %>

<table>
  <thead>
    <tr>
      <th>Title</th>
   
      <th>Actions</th>

    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td>
        <%= link_to 'Show', book_path(book) %>
        <%= link_to 'Edit', edit_book_path(book) %>
        <%= link_to 'Delete', delete_book_path(book) %>
        </td>

      </tr>
    <% end %>
  </tbody>
</table>
