<%= link_to 'Back to Home Page', root_path %>
<h1>Add New Book</h1>

<%= form_with model: @book, local: true do |form| %>
  <div class="field">
    <%= form.label :title %><br>
    <%= form.text_field :title %>
  </div>

  <div class="actions">
    <%= form.submit "Add New Book" %>
  </div>
<% end %>

